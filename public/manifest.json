{
  "manifest_version": 3,
  "name": "UnitSwitch",
  "version": "2.0",
  "description": "Convert between units quickly without leaving the current tab.",
  "action": {
    "default_popup": "index.html",
    "default_title": "UnitSwitch"
  },
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
